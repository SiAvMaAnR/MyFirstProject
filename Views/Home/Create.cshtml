@model CreateViewModel
@{
    ViewData["Title"] = "Добавить пользователя";
}
<div class="container">

    <form asp-antiforgery="true" asp-action="Create" asp-controller="Home">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for=@Model.User.Name class="control-label">Имя</label>
            <input type="text" asp-for=@Model.User.Name class="form-control" />
            <span asp-validation-for=@Model.User.Name></span>
        </div>
        <div class="form-group">
            <label asp-for=@Model.User.Age class="control-label">Возраст</label>
            <input type="number" asp-for=@Model.User.Age class="form-control" />
            <span asp-validation-for=@Model.User.Age></span>
        </div>
        <div class="form-group">
            <input class="send" type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>

    @section scripts{

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</div>