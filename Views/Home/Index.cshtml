@model IndexViewModel
@{
    ViewData["Title"] = "Все пользователи";
}

<div>
    <a class="link" asp-action="Create">Добавить пользователя</a>

    <table class="table">
        <tr>
            <td>Id</td>
            <td>Имя</td>
            <td>Возраст</td>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
            </tr>
        }
    </table>

</div>
