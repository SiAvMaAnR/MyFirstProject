@model IndexViewModel
@{
    ViewData["Title"] = "Все пользователи";
}

<div>
    <table>
        <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Имя</th>
            <th>Имя</th>
            <th>Возраст</th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@(Model.Users.IndexOf(item)+1)</td>
                <td>@item.Name</td>
                <td>@item.Name</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
            </tr>
        }
    </table>


</div>
